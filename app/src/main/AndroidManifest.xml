<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javisemi.losrevoltososapp.app" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.javisemi.losrevoltososapp.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.javisemi.losrevoltososapp.app.HistoryActivity"
            android:label="HistoriaActivity" >
        </activity>
        <activity
            android:name="com.javisemi.losrevoltososapp.app.ContactoActivity"
            android:label="@string/title_activity_contacto" >
        </activity>
        <activity
            android:name="com.javisemi.losrevoltososapp.app.ComponentesActivity"
            android:label="@string/title_activity_componentes" >
        </activity>
        <activity
            android:name="com.javisemi.losrevoltososapp.app.CalendarioActivity"
            android:label="@string/title_activity_calendario" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.javisemi.losrevoltososapp.app.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>